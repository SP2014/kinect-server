                </MediaElement.Style>
            </MediaElement>
        </Button>
        <Button Background="White" BorderBrush="White" Grid.Row="4" Height="102" HorizontalAlignment="Center" Margin="30,0,18,1" Name="button3" VerticalAlignment="Bottom" Width="98">
