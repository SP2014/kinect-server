<Window x:Class="HCI2012.VoiceCommandWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="125" Width="180" WindowStyle="None" Topmost="True">
    <Grid Height="100" Width="166">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="134*" />
            <ColumnDefinition Width="10*" />
        </Grid.ColumnDefinitions>
        <Image Height="96" HorizontalAlignment="Left" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="55" Source="voice.jpg" Margin="0,-3,0,0" />
        <ListBox Height="93" HorizontalAlignment="Left" Margin="53,0,0,0" Name="listBoxVoiceCommand" VerticalAlignment="Top" Width="110" DataContext="{Binding}" ItemsSource="{Binding}" FontSize="18" FontWeight="Bold" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
